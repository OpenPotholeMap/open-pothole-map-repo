{
  "name": "open-pothole-map",
  "version": "1.0.0",
  "private": true,
  "description": "Open Pothole Map - Fullstack project with frontend and backend",
  "scripts": {
    "start:frontend": "cd frontend && npm run dev",
    "start:backend": "cd backend && npm run dev",
    "start": "concurrently --kill-others-on-fail \"npm run start:frontend\" \"npm run start:backend\""
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
