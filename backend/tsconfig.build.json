{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
